{
  "ts-node": {
    "files": true
  },
  "files": [
    "./@types/express/index.d.ts"
  ],
  "compilerOptions": {
    "outDir": "./build",
    "allowJs": true,
    "target": "es5",
    "module": "commonjs",
    "inlineSourceMap": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "typeRoots": [
      "./@types",
      "./node_modules/@types"
    ],
  },
  "include": [
    "./*.ts",
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}